<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title yield(:title) %></title>

    <meta name="viewport" content="width=device-width,initial-scale=1">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
    <div class="navbar navbar-expand-lg">
      <div class="container">
        <a class="navbar-brand" href="<%= root_path %>">
          Cafeteria
        </a>

        <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbar-items">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbar-items">
          <ul class="navbar-nav ms-auto">
            <% if logged_in? %>
              <li class="nav-item">
                <%= link_to t(".logout"), :session, class: "nav-link", data: { turbo_method: :delete } %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to t(".register"), new_registration_path, class: "nav-link" %>
              </li>

              <li class="nav-item">
                <%= link_to t(".login"), new_session_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

    <% flash.each do |type, message| %>
      <div class="alert alert-<%= flash_color(type) %> d-flex align-items-center justify-content-center gap-2 p-1 m-0 mb-3 rounded-0">
        <i class="bi <%= flash_icon(type) %>"></i>

        <strong><%= message %></strong>
      </div>
    <% end %>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
