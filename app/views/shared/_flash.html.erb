<div data-controller="flash" class="toast align-items-center text-white bg-<%= flash_color(type) %> border-0">
  <div class="d-flex">
    <div class="toast-body" style="text-shadow: 0 0 6px #555">
      <%= message %>
    </div>

    <button class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
  </div>
</div>
