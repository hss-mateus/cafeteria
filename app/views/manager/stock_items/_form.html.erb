<%= form_with model: [:manager, @item] do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
    <%= f.error_for :name %>
  </div>

  <div class="mb-3">
    <%= f.label :unit, class: "form-label" %>
    <%= f.collection_select :unit,
       StockItem.units.keys,
       :itself,
       ->{ StockItem.human_enum_name(:unit, _1) },
       {},
       class: "form-select" %>
    <%= f.error_for :unit %>
  </div>

  <div class="mb-3">
    <%= f.label :quantity, class: "form-label" %>
    <%= f.number_field :quantity, step: 0.01, class: "form-control" %>
    <%= f.error_for :quantity %>
  </div>

  <%= f.submit class: "btn btn-primary" %>
<% end %>
