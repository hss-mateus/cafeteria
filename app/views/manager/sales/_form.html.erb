<%= form_with model: [:manager, @sale], data: { controller: "mask" } do |f| %>
  <div class="mb-3">
    <%= f.label :product_id, class: "form-label" %>
    <%= f.collection_select :product_id, Product.order(:name), :id, :name, {}, class: "form-select" %>
    <%= f.error_for :product_id %>
  </div>

  <div class="mb-3">
    <%= f.label :discount_cents, class: "form-label" %>
    <%= f.text_field :discount_cents, class: "form-control", data: { mask_target: "moneyInput" } %>
    <%= f.error_for :discount_cents %>
  </div>

  <div class="mb-3">
    <%= f.label :valid_until, class: "form-label" %>
    <%= f.date_field :valid_until, class: "form-control" %>
    <%= f.error_for :valid_until %>
  </div>

  <%= f.submit class: "btn btn-primary" %>
<% end %>
