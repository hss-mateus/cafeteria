<div class="col-md-6">
  <div class="card mb-3 border-0 shadow shadow-sm">
    <div class="row g-0">
      <div class="col-md-8">
        <div class="card-body d-flex flex-column align-items-start h-100">
          <h3 class="card-title fw-bold"><%= product.name %></h3>

          <% if product.rating.positive? %>
            <div class="badge text-dark bg-light shadow shadow-sm">
              <small><%= number_with_precision(product.rating, precision: 1) %></small>
              <i class="bi bi-star-fill text-warning"></i>
            </div>
          <% end %>

          <p class="card-text mt-2">
            <% if product.discount? %>
              <s class="text-muted">
                <%= cents_to_currency(product.price_cents) %>
              </s>

              <b>
                <%= cents_to_currency(product.discounted_price_cents) %>
              </b>
            <% else %>
              <%= cents_to_currency(product.price_cents) %>
            <% end %>
          </p>

          <%= link_to product,
              class: "btn btn-outline-primary stretched-link mt-auto icon-link icon-link-hover",
              data: { turbo_frame: :modal } do %>
            <%= t(".details") %>
            <i class="bi bi-arrow-right mb-1"></i>
          <% end %>
        </div>
      </div>

      <div class="col-md-4 d-flex align-items-center justify-content-end">
        <%= image_tag product.picture, class: "img-fluid rounded-end h-100 object-fit-cover", style: "max-height: 200px" if product.picture.attached? %>
      </div>
    </div>
  </div>
</div>
