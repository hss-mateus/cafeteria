<div class="d-flex gap-3 align-items-center">
  <h1 class="fw-bold"><%= t(".header") %></h1>

  <%= turbo_frame_tag :new_category do %>
    <%= link_to t(".new"), [:new, :category], class: "btn btn-outline-primary" %>
  <% end %>
</div>

<div id="categories" class="d-flex flex-column gap-3">
  <% if @daily_specials.any? %>
    <div class="bg-light border rounded p-3">
      <div class="d-flex align-items-center gap-3">
        <h2>
          <%= t(".daily_specials") %>
        </h2>
      </div>

      <div class="my-3 row">
        <%= render @daily_specials %>
      </div>
    </div>
  <% end %>

  <%= render @categories %>
</div>
